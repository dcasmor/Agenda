<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="?attr/listPreferredItemHeight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/image_contact_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ivContacto"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/imagen"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:text="@string/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTelefono"
        android:layout_below="@+id/tvNombre"
        android:layout_alignStart="@+id/tvNombre"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/ivContacto"
        android:layout_alignEnd="@+id/tvNombre" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bEmail"
        android:layout_alignTop="@+id/bLlamar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/icon_email" />

    <Button
        android:layout_height="40dp"
        android:id="@+id/bLlamar"
        android:layout_width="40dp"
        android:textAlignment="viewStart"
        android:layout_toStartOf="@+id/bEmail"
        android:layout_alignTop="@id/tvNombre"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/icon_call" />

    <TextView
        android:text="@string/contacto"
        android:id="@+id/tvNombre"
        android:layout_height="25dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_alignTop="@+id/ivContacto"
        android:layout_toEndOf="@+id/ivContacto"
        android:layout_marginStart="5dp"
        android:layout_width="240dp" />

</RelativeLayout>