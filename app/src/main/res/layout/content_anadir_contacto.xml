<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_anadir_contacto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dcasm.agenda.AnadirContacto"
    tools:showIn="@layout/activity_anadir_contacto">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="ScrollViewSize"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/image_contact_default"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/ivAddPhoto"
                    android:contentDescription="@string/imagen"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="@string/contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/ivAddPhoto"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="@string/contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/etAddName"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView2"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etAddName"
                    tools:ignore="LabelFor"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:id="@+id/etAddPhone"
                    android:layout_marginTop="5dp"
                    tools:ignore="LabelFor"
                    android:layout_toStartOf="@+id/bAddPhone" />

                <TextView
                    android:text="@string/contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/etAddPhone"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView4"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:id="@+id/etAddAddress"
                    android:layout_marginTop="5dp"
                    tools:ignore="LabelFor" />

                <TextView
                    android:text="@string/contact_email"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/etAddAddress"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView5"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true"
                    android:id="@+id/etAddEmail"
                    android:layout_marginTop="5dp"
                    tools:ignore="LabelFor" />

                <TextView
                    android:text="@string/contact_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etAddEmail"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView6"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentStart="true"
                    android:id="@+id/etAddWeb"
                    android:layout_marginTop="5dp"
                    tools:ignore="LabelFor" />

                <TextView
                    android:text="@string/contact_photo"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/etAddWeb"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etAddPhoto"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_toStartOf="@+id/bAddPhoto"
                    tools:ignore="LabelFor" />

                <Button
                    android:layout_height="wrap_content"
                    android:id="@+id/bAddPhoto"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/etAddPhoto"
                    android:layout_alignTop="@+id/etAddPhoto"
                    android:layout_width="45dp"
                    android:background="@android:drawable/ic_input_add" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bAddPhone"
                    android:layout_alignTop="@+id/etAddPhone"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/textView4"
                    android:layout_toEndOf="@+id/etAddPhoto"
                    android:background="@android:drawable/ic_input_add" />

                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bAddButton"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/etAddPhoto"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

        </ScrollView>

</RelativeLayout>
